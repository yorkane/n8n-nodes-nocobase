{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["es2019", "es2020", "es2021"],
    "removeComments": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist/"
  },
  "include": ["index.ts", "nodes/**/*", "credentials/**/*"]
} 